<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ankit.capisto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/evento"
        android:label="@string/app_name"
        android:roundIcon="@drawable/evento"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AnimatedSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Login" />
        <activity android:name=".CreateEventActivity" />
        <activity
            android:name=".EventsActivity"
            android:label="Events"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EventDetailActivity"
            android:label="Event Details"
            android:parentActivityName=".EventsActivity" />
        <activity
            android:name=".RegisterActivity"
            android:label="Register" />
        <activity
            android:name=".ProfileActivity"
            android:label="Profile" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".MoreActivity"
            android:label="More" />
        <activity
            android:name=".EditProfileActivity"
            android:label="Update Details"
            android:parentActivityName=".ProfileActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".UploadImages" />
        <activity
            android:name=".UsersActivity"
            android:label="Send Message"
            android:parentActivityName=".AdminActivity" />
        <activity
            android:name=".ShowMessageActivity"
            android:label="Messages"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ChangePassword" />
        <activity android:name=".BrowserActivity"></activity>
    </application>

</manifest>